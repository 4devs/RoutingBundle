<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_routing.admin_extension.route_referrers.class">FDevs\RoutingBundle\Sonata\Extension\ParentRouteExtension</parameter>
        <parameter key="f_devs_routing.route_admin.class">FDevs\RoutingBundle\Sonata\Admin\RouteMongodbAdmin</parameter>
    </parameters>

    <services>

        <service id="f_devs_routing.admin_extension.route_referrers" class="%f_devs_routing.admin_extension.route_referrers.class%">
            <tag name="sonata.admin.extension"/>
            <call method="setRouteManager"><argument type="service" id="f_devs_routing.route_manager"/></call>
            <call method="setRequirementsLocale"><argument>%requirements.locales%</argument></call>
        </service>

        <service id="f_devs_routing.route_admin" class="%f_devs_routing.route_admin.class%">
            <tag name="sonata.admin"
                 manager_type="doctrine_mongodb" group="dashboard.cmf"
                 label_catalogue="CmfRoutingBundle" label="dashboard.label_routing"
                 label_translator_strategy="sonata.admin.label.strategy.underscore"/>
            <argument/>
            <argument>%f_devs_routing.model.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>

    </services>
</container>
